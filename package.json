{
  "name": "turtlebased-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage",
    "lint": "eslint src .claude/memory .claude/types --ext .ts",
    "lint:fix": "eslint src .claude/memory .claude/types --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \".claude/memory/**/*.ts\" \".claude/types/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \".claude/memory/**/*.ts\" \".claude/types/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint && npm run test",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test:coverage && npm run build",
    "fix": "npm run format && npm run lint:fix",
    "actionlint": "npx -y @tktco/node-actionlint",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turtlebased/turtlebased-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/turtlebased/turtlebased-ts/issues"
  },
  "homepage": "https://github.com/turtlebased/turtlebased-ts#readme",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix --max-warnings 0",
      "bash -c 'tsc --noEmit'",
      "jest --bail --findRelatedTests --passWithNoTests"
    ],
    "hugo/**/*.html": [
      "bash -c 'cd hugo && npm test'"
    ],
    ".github/workflows/*.{yml,yaml}": [
      "prettier --write",
      "npm run actionlint"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@beads/bd": "^0.49.3",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@tktco/node-actionlint": "^1.6.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.52.0",
    "better-sqlite3": "^12.6.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.5.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
